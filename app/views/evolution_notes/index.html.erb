<p id="notice"><%= notice %></p>
<head>
  <meta charset="utf-8" />
  <title>Notas de Evolución</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <link data-require="bootstrap@3.3.7" data-semver="3.3.7" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
  <script data-require="bootstrap@3.3.7" data-semver="3.3.7" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" type="text/css" href="./../../../Styles/custom.css" />
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU"
                                                                                        crossorigin="anonymous">
</head>

<body>
  <div id="wrapper">
    <!-- Page Content -->
    <div id="page-content-wrapper">
      <div class="container-fluid">
        <div class="row margin-row">
          <div class="col-lg-8"></div>
        </div>

      <%= link_to 'Crear nota evolucion', new_patient_evolution_note_path, class: "btn btn-success"%>
        <div class="row">
          <div class="col-lg-12">
            <div class="panel panel-default">
              <div class="panel-body">
                <!-- /Select -->
                <!-- Table -->
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th>No. Expediente</th>
                      <th>Nombre del Paciente</th>
                      <th>Diagnostico</th>
                      <th>Tratamiento</th>
                      <th>Fecha</th>
                      <th colspan="2">Acción</th>
                    </tr>
                  </thead>
                  <tbody class="all-notes">
                    <% @evolution_notes.each do |evolution_note| %>
                      <tr>
                        <td><%= evolution_note.id %></td>
                        <td><%= evolution_note.patient.first_name %></td>
                        <td><%= evolution_note.diagnosis %></td>
                        <td><%= evolution_note.treatment %></td>
                        <td><%= evolution_note.created_at %></td>
                        <td><%= link_to 'Editar', edit_patient_evolution_note_path(evolution_note.patient_id, evolution_note.id) %></td>
                        <td><%= link_to 'Eliminar', [evolution_note.patient, evolution_note], method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <div class="alert alert-warning" role="alert" id="warning_message">
                  <i class="fas fa-exclamation-triangle"></i> No se han encontrado resultados.</div>
              </div>
            </div>
          </div>
          <!-- /.col-lg-12 -->
        </div>
      </div>
    </div>
    <!-- /#page-content-wrapper -->
  </div>
  <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
crossorigin="anonymous"></script>
  <script type="text/javascript" src="./../../../js/note-dashboard.js"></script>
  <!-- /#wrapper -->
</body>
