<div class="login">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
            <%= image_tag("logo-login.png") %>
          </div>
          <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="input-group margin-bottom-sm">
                <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Correo' %>
              </div>

              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'ContraseÃ±a' %>
              </div>

              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>

              <div class="actions">
                <%= f.submit "Log in", class: 'btn btn-lg btn-warning btn-block' %>
                <%= link_to 'Registrarse', new_user_registration_path, class: 'forgotpass center' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>
