<p id="notice"><%= notice %></p>

<div id="wrapper">
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <%= link_to 'Editar', edit_patient_path(@patient) %> |
      <%= link_to 'Atrás', patients_path %>
      <div class="row container">
        <div class="col-md-12">
          <h1>Paciente <%= "#{@patient.first_name} #{@patient.last_name_father}" %></h1>
        </div>
      </div>
        <div class="row container">
          <div class="col-lg-12">
            <div class="panel panel-default">
              <div class="panel-body">
                  <% @patient.show_attributes.each do |name, value| %>
                      <label class="control-label"><%= name %>:</label> <%= value %>
                      <br/>
                  <% end %>
                </div>
            </div>
          </div>
        </div>

      <div class="row container">
        <div class="col-md-12">
          <h1>Antecedentes familiares</h1>
        </div>
      </div>
        <div class="row container">
          <div class="col-lg-12">
            <div class="panel panel-default">
              <div class="panel-body">
                  <label class="control-label">Diabetes: </label> <%= to_literal(@patient.checkup&.family_diabetes) %>
                  <br/>
                  <label class="control-label">Cáncer: </label> <%= to_literal(@patient.checkup&.family_cancer) %>
                  <br/>
                  <label class="control-label">Hipertensión: </label> <%= to_literal(@patient.checkup&.family_hipertension) %>
                  <br/>
                  <label class="control-label">Comentarios: </label> <%= @patient.checkup&.family_comments || "Sin comentarios" %>
                </div>
            </div>
          </div>
        </div>

        <div class="row container">
        <div class="col-md-12">
          <h1>Antecedentes personales patológicos</h1>
        </div>
      </div>
        <div class="row container">
          <div class="col-lg-12">
            <div class="panel panel-default">
              <div class="panel-body">
                  <label class="control-label">Diabetes: </label> <%= to_literal(@patient.checkup&.personal_diabetes) %>
                  <br/>
                  <label class="control-label">Cáncer: </label> <%= to_literal(@patient.checkup&.personal_cancer) %>
                  <br/>
                  <label class="control-label">Hipertensión: </label> <%= to_literal(@patient.checkup&.personal_hipertension) %>
                  <br/>
                  <label class="control-label">Comentarios: </label> <%= @patient.checkup&.personal_comments || "Sin comentarios" %>
                  <br/>
                  <label class="control-label">Alergias: </label> <%= @patient.checkup&.allergies || "Sin alergias" %>
                  <br/>
                  <label class="control-label">Cirujías: </label> <%= @patient.checkup&.surgeries || "Sin cirugías" %>
                </br>
            </div>
          </div>
        </div>

      <div class="row container">
        <div class="col-md-12">
          <h1>Interrogatorio y exploración dermatológica</h1>
        </div>
      </div>
        <div class="row container">
          <div class="col-lg-12">
            <div class="panel panel-default">
              <div class="panel-body">
                  <label class="control-label">Resultados: </label> <%= @patient.checkup&.results || "Sin resultados" %>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
</div>
