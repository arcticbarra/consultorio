<div id="wrapper">
  <!-- Page Content -->
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <h1>Nuevo paciente</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-default">
            <div class="panel-body">
              <!-- Form -->
              <div class="container">
                <fieldset>
                  <%= form_for(:user, html: {class: 'well form-horizontal'}, as: :user, url: patients_path) do |f| %>

                    <%= render partial: "new_form", locals: { f: f, patient: @user.build_patient} %> 
                    <div class="form-group">
                      <label class="col-md-4 control-label">E-Mail</label>
                      <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                        </div>
                        <p id="error_email" class="error_p"></p>
                      </div>
                    </div>

                    <div class="form-group">
                      <label class="col-md-4 control-label">Password</label>
                      <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                          <span class="input-group-addon"><i class="fas fa-key"></i></span>
                          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                        </div>
                        <p id="error_email" class="error_p"></p>
                      </div>
                    </div>

                    <div class="form-group">
                      <label class="col-md-4 control-label">Confirmar Password</label>
                      <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                          <span class="input-group-addon"><i class="fas fa-key"></i></span>
                          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                        </div>
                        <p id="error_email" class="error_p"></p>
                      </div>
                    </div>


                    <div class="actions center">
                      <%= f.submit "Crear paciente", class: "btn btn-success" %>
                    </div>
                  <% end %>
                </fieldset>
                <div class="pull-right">
                </div>
              </div>
            </div>

            <!-- /.container -->
            <!-- Form -->
          </div>
        </div>
      </div>
      <!-- /.col-lg-12 -->
    </div>
  </div>
</div>
<!-- /#page-content-wrapper -->
</div>

